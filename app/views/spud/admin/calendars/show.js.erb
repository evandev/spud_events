var html = "<%= escape_javascript(render :partial => 'calendar', :locals => {:calendar => @calendar}) %>"

if(el = Wd.elementById('wd_calendar_legend', <%= @calendar.id %>)){
  el.replaceWith(html);
  Wd.elementByClass('wd_calendar_event', <%= @calendar.id %>).css('background-color', "#<%= @calendar.color %>");
}
else{
  $('#wd_admin_calendar_legend').append(html);
}
Wd.Admin.hidePopup();
